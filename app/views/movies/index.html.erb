<p class="search"> Search for a Movie!</p>
<%= form_tag movies_path, method: :get do %>
  <%= text_field_tag :query, nil, placeholder: "By Title or Director:" %>
  <%= select_tag(:runtime_in_minutes, options_for_select([["Under 90 Minutes", 1], ["Between 90 and 120 Minutes", 2], ["Over 120 Minutes", 3]], 1)) %>
  <a class="waves-effect waves-light btn"><%= submit_tag("Search") %></a>
<% end %>

